{
    "name": "gaiatools/fulcrum-settings",
    "description": "Advanced feature flags and configuration management system for Laravel with rule-based targeting",
    "keywords": [
        "laravel",
        "feature-flags",
        "settings",
        "configuration-management",
        "rules-engine",
        "user-targeting"
    ],
    "license": "Apache-2.0",
    "authors": [
      {
        "name": "Gaia Tools",
        "email": "support@gaiatools.com"
      }
    ],
    "require": {
        "php": "^8.3|^8.4",
        "azuyalabs/yasumi": "^2.10",
        "dragonmantank/cron-expression": "^3.6",
        "illuminate/contracts": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0"
    },
    "require-dev": {
        "larastan/larastan": "^3.8",
        "laravel/pennant": "^1.18",
        "laravel/pint": "^1.26",
        "laravel/telescope": "^5.16",
        "orchestra/testbench": "^10.8",
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-laravel": "^4.0",
        "phpstan/phpstan": "^2.1",
        "spatie/laravel-permission": "^7.2"
    },
    "autoload": {
        "psr-4": {
            "GaiaTools\\FulcrumSettings\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GaiaTools\\FulcrumSettings\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "GaiaTools\\FulcrumSettings\\FulcrumSettingsServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "XDEBUG_MODE=coverage vendor/bin/pest --parallel --coverage-html coverage --coverage-text --min=100",
        "analyze": "vendor/bin/phpstan analyse",
        "phpstan": "php -d memory_limit=1G vendor/bin/phpstan analyse",
        "lint": "vendor/bin/pint --parallel --test",
        "format": "vendor/bin/pint",
        "format-test": "vendor/bin/pint --test"
    }
}
