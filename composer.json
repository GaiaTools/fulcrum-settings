{
    "name": "gaiatools/laravel-fulcrum-settings",
    "description": "Advanced feature flags and configuration management system for Laravel with rule-based targeting",
    "keywords": [
        "laravel",
        "feature-flags",
        "settings",
        "configuration-management",
        "rules-engine",
        "user-targeting"
    ],
    "license": "Apache-2.0",
    "authors": [
      {
        "name": "Gaia Tools",
        "email": "support@gaiatools.com"
      }
    ],
    "require": {
        "php": "^8.2|^8.3|^8.4",
        "illuminate/contracts": "^11.0|^12.0",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0"
    },
    "require-dev": {
      "larastan/larastan": "^3.8",
      "laravel/pennant": "^1.18",
      "laravel/pint": "^1.26",
      "orchestra/testbench": "^10.8",
      "pestphp/pest": "^4.1",
      "pestphp/pest-plugin-laravel": "^4.0",
      "phpstan/phpstan": "^2.1"
    },
    "autoload": {
        "psr-4": {
            "GaiaTools\\LaravelFulcrum\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "GaiaTools\\LaravelFulcrum\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "GaiaTools\\LaravelFulcrum\\LaravelFulcrumServiceProvider"
            ]
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "vendor/bin/pest",
        "test-coverage": "vendor/bin/pest --coverage --min=100",
        "phpstan": "php -d memory_limit=1G vendor/bin/phpstan analyse",
        "format": "vendor/bin/pint",
        "format-test": "vendor/bin/pint --test"
    }
}
